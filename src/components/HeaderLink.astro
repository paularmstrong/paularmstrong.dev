---
import clsx from 'clsx';
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {
	href: string;
}

const { href, ...props } = Astro.props;
const isActive = Astro.url.pathname.startsWith(href);
---

<a
	aria-current={isActive ? 'page' : undefined}
	href={href}
	class={clsx(
		'block whitespace-nowrap rounded py-2 px-4 font-bold text-blue-600 outline-none hover:bg-blue-400/20 hover:text-blue-800 focus-visible:ring-4 focus-visible:ring-blue-200 dark:text-blue-200 dark:hover:bg-blue-500/20 dark:hover:text-blue-100 dark:focus-visible:ring-blue-500/20',
		{ 'bg-blue-200/50 dark:bg-blue-400/40': isActive }
	)}
	{...props}
>
	<slot />
</a>
