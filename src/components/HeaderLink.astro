---
import clsx from 'clsx';
export type Props = astroHTML.JSX.AnchorHTMLAttributes;

const { href, ...props } = Astro.props;
const isActive = Astro.url.pathname.startsWith(href);
---

<a
	aria-current={isActive ? 'page' : undefined}
	href={href}
	class={clsx(
		'block whitespace-nowrap rounded py-2 px-4 font-bold text-blue-600 outline-none hover:bg-blue-400/20 hover:text-blue-800 focus:underline focus:decoration-4 focus:underline-offset-4 dark:text-blue-200 dark:hover:bg-blue-500/20 dark:hover:text-blue-100',
		{ 'bg-blue-200/50 dark:bg-blue-400/40': isActive }
	)}
	{...props}
>
	<slot />
</a>
