---
import Content from '~/components/Content.astro';
import HeaderLink from '~/components/HeaderLink.astro';
import { SITE_TITLE } from '../config';
import { ThemeSwitcher } from '~/components/ThemeSwitcher';
import Picture from '~/components/Picture.astro';
---

<Content>
	<header>
		<div class="grid grid-cols-1 items-center justify-between gap-2 py-4 md:grid-cols-2">
			<h1 class="shrink-0">
				<a
					class="group flex flex-row items-center gap-2 whitespace-nowrap text-2xl font-bold text-blue-600 outline-none hover:text-blue-800 focus:underline focus:decoration-4 focus:underline-offset-4 dark:text-blue-200 dark:hover:text-blue-100"
					href="/"
				>
					<Picture
						loading="eager"
						class="h-12 w-12 shrink-0 select-none overflow-hidden rounded-full group-focus-visible:ring-4 group-focus-visible:ring-blue-200 dark:group-focus-visible:ring-blue-500/40"
						src="/img/avatar.jpg"
						widths={[48, 96]}
						width={96}
						height={96}
						alt="Paul Armstrong’s profile picture"
					/>
					{SITE_TITLE}
				</a>
			</h1>
			<nav class="select-none items-end">
				<ul class="flex flex-row flex-wrap justify-end gap-1">
					<li><HeaderLink href="/blog/">Blog</HeaderLink></li>
					<li><HeaderLink href="/about/">About</HeaderLink></li>
					<li><HeaderLink href="/resume/">Résumé</HeaderLink></li>
					<li class="shrink-0"><ThemeSwitcher client:load /></li>
				</ul>
			</nav>
		</div>
	</header>
</Content>
