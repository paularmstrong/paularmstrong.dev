---
import BaseHead from '~/components/BaseHead.astro';
import Header from '~/components/Header.astro';
import Footer from '~/components/Footer.astro';
import Content from '~/components/Content.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import SiteWrapper from '~/components/SiteWrapper.astro';
import SkipToMain from '~/components/SkipToMain.astro';
import { Snackbar } from '~/components/Snackbar';
import './global.css';

export interface Props {
	title?: string;
	description?: string;
	image?: string;
}
const { title, description, image } = Astro.props;
---

<html class="scroll-smooth" lang="en">
	<head>
		<BaseHead
			title={title ? `${title} â€¢ ${SITE_TITLE}` : SITE_TITLE}
			description={description || SITE_DESCRIPTION}
			image={image}
		/>
	</head>

	<body>
		<SiteWrapper fullscreen>
			<SkipToMain />

			<Header />

			<div class="grow">
				<main id="main">
					<Content>
						<slot />
					</Content>
				</main>
			</div>

			<Footer />

			{/* @ts-ignore */}
			<Snackbar client:load />
		</SiteWrapper>

		<script
			async
			crossorigin="anonymous"
			src="https://js.sentry-cdn.com/9b133389b9a540e49f6c3f76ca7226bf.min.js"
		></script>
	</body>
</html>
